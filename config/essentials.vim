syntax enable

set termguicolors

set nocp

filetype plugin on

filetype plugin indent on

let mapleader = " "

" Clear search highlights
nmap <silent><esc> :noh<CR>

set noerrorbells
set encoding=UTF-8
set clipboard+=unnamedplus
set incsearch
set smartcase
set relativenumber
set number
set nowrap
set undofile
set undodir=$HOME/.vim/undodir
set noswapfile
set nobackup
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent
